{% extends 'base.html.twig' %}

{% block title %}{{ Sizes.Name }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-3 mb-4">
            <div class="col-md-8">
                <h1 class="mt-4 mt-md-0">Size Type: {{ Sizes.Name }}</h1>
                <h2 class="mt-4 mt-md-0">Size Description: {{ Sizes.Description }}</h1><br>
                <b>laptops: </b>{% for laptop in Sizes.laptops %}
                <a class="text-decoration-none" href="{{ path('detailLaptop', {'id' : laptop.id }) }}">
                {{ laptop.name }}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}