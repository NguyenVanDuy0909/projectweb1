{% extends 'base.html.twig' %}

{% block title %}{{ Brands.Name }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-3 mb-4">
            <div class="col-md-8">
                <h1 class="mt-4 mt-md-0">Brand type: {{ Brands.Name }}</h1>
                <hr>
                <b>Description: </b>{{ Brands.Description }}<br>
                <b>laptops: </b>{% for laptop in Brands.laptops %}
                <a class="text-decoration-none" href="{{ path('detailLaptop', {'id' : laptop.id }) }}">
                {{ laptop.name }}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}