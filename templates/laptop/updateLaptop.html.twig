{% extends "base.html.twig" %}

{% block title %}Update Laptop
{% endblock %}

{% block body %}
	<div class="container-fluid mt-3">
		<h2 class="text-center mt-5">Update Laptop</h2>
		<div class="col-md-6"></div>
		{{ form_start (form) }}
		<div class="form-group">
			{{ form_label (form.name) }}
			{{ form_widget (form.name, {'attr': {'class' : 'form-control'}}) }}
		</div>

		<div class="form-group">
			{{ form_label (form.brand) }}
			{{ form_widget (form.brand, {'attr': {'class' : 'form-control'}}) }}
		</div>

		<div class="form-group">
			{{ form_label (form.price) }}
			{{ form_widget (form.price, {'attr': {'class' : 'form-control'}}) }}
		</div>
		<div class="form-group">
			{{ form_label (form.color) }}
			{{ form_widget (form.color, {'attr': {'class' : 'form-control'}}) }}
		</div>

		<div class="form-group">
			{{ form_label (form.amount) }}
			{{ form_widget (form.amount, {'attr': {'class' : 'form-control'}}) }}
		</div>

		<div class="form-group">
			{{ form_label (form.madein) }}
			{{ form_widget (form.madein, {'attr': {'class' : 'form-control'}}) }}
		</div>

		<div class="form-group">
			{{ form_label (form.size) }}
			{{ form_widget (form.size, {'attr': {'class' : 'form-control'}}) }}
		</div>

		<div class="form-group">
			{{ form_label (form.priceDiscount) }}
			{{ form_widget (form.priceDiscount, {'attr': {'class' : 'form-control'}}) }}
		</div>

		<div class="form-group">
			{{ form_label (form.image) }}
			{{ form_widget (form.image, {'attr': {'class' : 'form-control'}}) }}
		</div>

		<div class="form-group text-center mt-3">
			<button class="btn btn-primary btn-lg">Update</button>
		</div>
		{{ form_end (form)}}
	</div>

{% endblock %}
